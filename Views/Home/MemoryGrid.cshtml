@{
    ViewData["Title"] = "Memory grid";
}

<h1 class="text-center">Memory Grid</h1>
<div class="row text-center">
    <div class="col">
        <div class="btn-group">
            <button id="btnReset" class="btn btn-danger">Reset</button>
            <button id="btnHint" class="btn btn-info">Hint</button>
            <button id="btnCheck" class="btn btn-warning">Check</button>
        </div>
    </div>
</div>
<div class="row">
    <div id="memoryGridContainer" class="col">
        <div  class="btn-group-vertical float-right">
            <div class="btn-group">
                <button id="grdBtn00" class="btn btn-dark grid-button"></button>
                <button id="grdBtn01" class="btn btn-dark grid-button"></button>
                <button id="grdBtn02" class="btn btn-dark grid-button"></button>
                <button id="grdBtn03" class="btn btn-dark grid-button"></button>
            </div>
            <div class="btn-group">
                <button id="grdBtn04" class="btn btn-dark grid-button"></button>
                <button id="grdBtn05" class="btn btn-dark grid-button"></button>
                <button id="grdBtn06" class="btn btn-dark grid-button"></button>
                <button id="grdBtn07" class="btn btn-dark grid-button"></button>
            </div>
            <div class="btn-group">
                <button id="grdBtn08" class="btn btn-dark grid-button"></button>
                <button id="grdBtn09" class="btn btn-dark grid-button"></button>
                <button id="grdBtn10" class="btn btn-dark grid-button"></button>
                <button id="grdBtn11" class="btn btn-dark grid-button"></button>
            </div>
            <div class="btn-group">
                <button id="grdBtn12" class="btn btn-dark grid-button"></button>
                <button id="grdBtn13" class="btn btn-dark grid-button"></button>
                <button id="grdBtn14" class="btn btn-dark grid-button"></button>
                <button id="grdBtn15" class="btn btn-dark grid-button"></button>
            </div>
        </div>
    </div>
    <div class="col">
        <textarea id="logArea" style="width: 200px; height: 200px; font-family: Courier New, monospace; font-size: 9pt;"></textarea>
    </div>
</div>

@section Scripts{
    <script>
    var memGridHandler;
        $(function(){
            memGridHandler = initMemoryGrid();
        });
    </script>
}